pipeline {
   agent any
    stages {
        stage('Build') {
            steps {
                bat 'mvn -B -DskipTests clean package'
            }
        }
        stage('Test') {
            steps {
                bat 'mvn test'
            }
            post {
                always {
                    junit 'target/surefire-reports/*.xml'
                }
            }
        }
        
       
       stage('Deploy'){
          steps{
             
             bat '''C:\\Users\Mayuresh.Marathe\\.jenkins\workspace\\SampleMavenApp\\target\\surefire-reports\\*.xml C:\\Users\\Mayuresh.Marathe\\Desktop\\apache-tomcat-8.5.54\\webapps'''
          }
       }
    }
}
